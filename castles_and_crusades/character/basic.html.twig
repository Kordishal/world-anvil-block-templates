                        <div class="move-text"><h4>AC</h4></div>
                    </div>
                    <div class="col-md-6">
                        <div class="move-value">+{{ variables.hit_misc }}</div>
                        <div class="move-text"><h4>BtH</h4></div>
                    </div>
                </div>
