            <div class="col-md-6">
                <div class="sheet-text-box">
                    <div class="sheet-text-title">
                        <h4 class="sheet-text-heading">Equipment</h4>
                    </div>
                    <div class="sheet-text-content">{{ variables.equipment }}</div>
                </div>
            </div>
            <div class="col-md-6">
