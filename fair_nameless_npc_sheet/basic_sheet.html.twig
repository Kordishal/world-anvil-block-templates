<section>
	<a class="btn btn-primary" data-toggle="collapse" href="#collapseNPCSheet" role="button" aria-expanded="true" aria-controls="collapseNPCSheet">
    <h3>{{ variables.name }}</h3>
  	</a>
	<div class="collapse" id="collapseNPCSheet">
	  <div class="card card-body">
		<p><b>Aspect{% if variables.character_aspect_2 is defined and variables.character_aspect_2 != "" %}s{% endif %}</b>: {{variables.character_aspect_1}}{% if variables.character_aspect_2 is defined and variables.character_aspect_2 != "" %}, {{ variables.character_aspect_2}}{% endif %}</p>
	  	{% if variables.fair_2_skill is defined and variables.fair_2_skill != "None" %}
		<div class="row">
		 <div class="col-md-2">
			<b>{{ variables.fair_2_skill}}</b>
		 </div>
		 <div class="col-md-1">
			[roll:4dF+2]
		 </div>
		</div>
		{% endif %}
  		{% if variables.average_1_skill_1 is defined and variables.average_1_skill_1 != "None" %}
		<div class="row">
		 <div class="col-md-2">
			<b>{{ variables.average_1_skill_1}}</b>
		 </div>
		 <div class="col-md-1">
			[roll:4dF+1]
		 </div>
		</div>
		{% endif %}
		{% if variables.average_1_skill_2 is defined and variables.average_1_skill_2 != "None" %}
		<div class="row">
			 <div class="col-md-2">
				<b>{{ variables.average_1_skill_2}}</b>
			 </div>
			 <div class="col-md-1">
				[roll:4dF+1]
			 </div>
		</div>
		{% endif %}
		  {% if variables.stress is defined %}
			<div class="row">
		 <div class="col">
			 <span><label for="stress" class="control-label">
                    <input value="1" {% if variables.stress is defined and variables.stress == 1  %} checked="checked"{% endif %} id="stress" name="stress" type="checkbox" disabled="disabled"/>Stress</label>
                </span>
		 </div>
	</div>
	{% endif %}
	  </div>
	</div>

</section>