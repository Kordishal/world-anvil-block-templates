                    <h1>Stress</h1>
                </div>
                <div class="property-box">
                    <div>
                        <h3>Physical Stress</h3>
                    </div>
                    <div>
                        <input value="1" {% if variables.physical_stress_box_1 is defined and variables.physical_stress_box_1 == 1 %} checked="checked"{% endif %}
